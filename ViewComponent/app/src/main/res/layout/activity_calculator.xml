<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".android_practice.Calculator">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#604B4B">

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="right|center"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="36sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/plus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#E1CC17"
                android:gravity="center"
                android:text="+"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/minus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#E1CC17"
                android:gravity="center"
                android:text="-"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/multiply"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#E1CC17"
                android:gravity="center"
                android:text="x"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/divide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#E1CC17"
                android:gravity="center"
                android:text="รท"
                android:textColor="#ffffff"
                android:textSize="36sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/num1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#404343"
                android:gravity="center"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/num2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#404343"
                android:gravity="center"
                android:text="2"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/num3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#404343"
                android:gravity="center"
                android:text="3"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/clearAll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F44336"
                android:gravity="center"
                android:text="CA"
                android:textColor="#ffffff"
                android:textSize="36sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/num4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#404343"
                android:gravity="center"
                android:text="4"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/num5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#404343"
                android:gravity="center"
                android:text="5"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/num6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#404343"
                android:gravity="center"
                android:text="6"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/equal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F44336"
                android:gravity="center"
                android:text="="
                android:textColor="#ffffff"
                android:textSize="36sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/num7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#404343"
                android:gravity="center"
                android:text="7"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/num8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#404343"
                android:gravity="center"
                android:text="8"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/num9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#404343"
                android:gravity="center"
                android:text="9"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/num0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#404343"
                android:gravity="center"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="36sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>